# i3 config file (v4)

# startup commands
exec --no-startup-id xsettingsd
exec --no-startup-id pa-applet
exec --no-startup-id nm-applet
exec --no-startup-id cbatticon
exec --no-startup-id emacs --daemon
exec --no-startup-id dunst
exec --no-startup-id xss-lock lock

set $mod Mod4
font pango:Sans 8
floating_modifier $mod
workspace_auto_back_and_forth yes
mouse_warping none

# run things
bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+w exec firefox
bindsym $mod+e exec emacsclient -c -n

# kill focused window
bindsym $mod+k kill

# start dmenu (a program launcher)
bindsym $mod+space exec --no-startup-id dmenu_run

# find urgent window
bindsym $mod+u [urgent=latest] focus

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+Mod1+Left  focus left;  split v; focus right; move left
bindsym $mod+Mod1+Right focus right; split v; focus left;  move right
bindsym $mod+Mod1+Up    focus up;    split h; focus down;  move up
bindsym $mod+Mod1+Down  focus down;  split h; focus up;    move down

# split in horizontal orientation
bindsym $mod+semicolon split h

# split in vertical orientation
bindsym $mod+apostrophe split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+period layout tabbed
bindsym $mod+Shift+period split h, mark t, [class="__focused__" workspace="__focused__"] move window to mark t, layout tabbed, unmark
bindsym $mod+slash layout toggle split

# toggle tiling / floating
bindsym $mod+l floating toggle

# change focus between tiling / floating windows
bindsym $mod+shift+l focus mode_toggle

bindsym $mod+bracketleft  workspace prev_on_output
bindsym $mod+bracketright workspace next_on_output

# TODO: scripts and bar.
bindsym $mod+minus move scratchpad, exec --no-startup-id pkill -RTMIN+1 i3blocks
bindsym $mod+equal scratchpad show, exec --no-startup-id pkill -RTMIN+1 i3blocks

bindsym $mod+b bar mode toggle

# switch to workspace
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

bindsym Pause exec --no-startup-id xset s activate
bindsym $mod+Pause exec --no-startup-id systemctl hibernate

set $i3_mode "I3: [l]oad config, [r]estart, [e]xit || SYSTEM: [h]ibernate, [s]hutdown"

mode $i3_mode {
     bindsym l reload, mode default
     bindsym r restart, mode default
     bindsym e exit, mode default
     bindsym h exec --no-startup-id systemctl hibernate
     bindsym s exec --no-startup-id systemctl poweroff
     bindsym Escape mode default
}

# reload the configuration file
bindsym $mod+Escape mode $i3_mode

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    font pango:Sans, FontAwesome 8
    status_command i3blocks
    separator_symbol "Â·"
    tray_padding 0
}
